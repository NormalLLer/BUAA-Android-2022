    <EditText
        android:id="@+id/word_label1"
        android:layout_width="173dp"
        android:layout_height="37dp"
        android:ems="10"
        android:hint="标签1"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
