<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue3"
    tools:context=".ui.person.PersonFragment">


    <ImageView
        android:id="@+id/userPortrait"
        android:layout_width="106dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="22dp"
        android:src="@drawable/kl"
        app:layout_constraintBottom_toTopOf="@+id/userName_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userName_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="411dp"
        android:gravity="center"
        android:text="Klily"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPortrait" />

    <ImageView
        android:id="@+id/addFriend_person"
        android:layout_width="42dp"
        android:layout_height="58dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/add_friend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/showFriends_person"
        android:layout_width="41dp"
        android:layout_height="56dp"
        android:layout_marginTop="47dp"
        android:src="@drawable/friend2"
        app:layout_constraintEnd_toEndOf="@+id/addFriend_person"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addFriend_person"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/setAlarm_person"
        android:layout_width="42dp"
        android:layout_height="49dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/alarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/showFriends_person"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>